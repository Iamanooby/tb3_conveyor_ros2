<?xml version="1.0" ?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:property name="base_length" value="0.256"/>


  <!-- Init colour -->
  <material name="black">
      <color rgba="0.0 0.0 0.0 1.0"/>
  </material>

  <material name="dark">
    <color rgba="0.3 0.3 0.3 1.0"/>
  </material>

  <material name="light_black">
    <color rgba="0.4 0.4 0.4 1.0"/>
  </material>

  <material name="blue">
    <color rgba="0.0 0.0 0.8 1.0"/>
  </material>

  <material name="green">
    <color rgba="0.0 0.8 0.0 1.0"/>
  </material>

  <material name="grey">
    <color rgba="0.5 0.5 0.5 1.0"/>
  </material>

  <material name="orange">
    <color rgba="1.0 0.4235 0.0392 1.0"/>
  </material>

  <material name="brown">
    <color rgba="0.8706 0.8118 0.7647 1.0"/>
  </material>

  <material name="red">
    <color rgba="0.8 0.0 0.0 1.0"/>
  </material>

  <material name="white">
    <color rgba="1.0 1.0 1.0 1.0"/>
  </material>

  <xacro:macro name="wheel" params="name xyz rpy">
  
    <link name="wheel_${name}_link">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <cylinder length="0.018" radius="0.033"/>
        </geometry>
        <material name="dark"/>
      </visual>

      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <cylinder length="0.018" radius="0.033"/>
        </geometry>
      </collision>

      <inertial>
        <origin xyz="0 0 0" />
        <mass value="2.8498940e-02" />
        <inertia ixx="1.1175580e-05" ixy="-4.2369783e-11" ixz="-5.9381719e-09" iyy="1.1192413e-05" iyz="-1.4400107e-11" izz="2.0712558e-05" />
      </inertial>
    </link>

    <joint name="wheel_${name}_joint" type="continuous">
      <parent link="base_link"/>
      <child link="wheel_${name}_link"/>
      <origin xyz="${xyz}" rpy="${rpy}"/>
      <axis xyz="0 0 1"/>
    </joint>

  </xacro:macro>

  <xacro:macro name="swerve_wheel" params="name xy yaw">
  
    <link name = "pivot_${name}_link"/>

    <joint name="pivot_${name}_joint" type="revolute">
      <parent link="base_link"/>
      <child link="pivot_${name}_link"/>
      <origin xyz="${xy} 0.023" rpy="0 0 ${yaw}"/>
      <axis xyz="0 0 1"/>
      <limit effort="1000.0" lower="-1.57" upper="1.57" velocity="0.5"/>
    </joint>

    <link name="wheel_${name}_link">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <cylinder length="0.018" radius="0.033"/>
        </geometry>
        <material name="dark"/>
      </visual>

      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <cylinder length="0.018" radius="0.033"/>
        </geometry>
      </collision>

      <inertial>
        <origin xyz="0 0 0" />
        <mass value="2.8498940e-02" />
        <inertia ixx="1.1175580e-05" ixy="-4.2369783e-11" ixz="-5.9381719e-09" iyy="1.1192413e-05" iyz="-1.4400107e-11" izz="2.0712558e-05" />
      </inertial>
    </link>

    <joint name="wheel_${name}_joint" type="continuous">
      <parent link="pivot_${name}_link"/>
      <child link="wheel_${name}_link"/>
      <origin xyz="0 0 0" rpy="-1.57 0 0"/>
      <axis xyz="0 0 1"/>
    </joint>

  </xacro:macro>

</robot>
